{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Build Directory",
            "type": "shell",
            "command": "mkdir -p build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "c++ compile",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}",
                "-std=c++17",
                "-lgtest",
                "-pthread",
                "-lleveldb"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "label": "c++ debug build",
            "dependsOn": [
                "Create Build Directory",
                "c++ compile"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}